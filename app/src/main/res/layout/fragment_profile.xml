<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="150dp">
            <LinearLayout android:orientation="vertical" android:id="@+id/profileLinLay" android:background="@drawable/gradient_profile_header" android:paddingTop="30dp" android:paddingBottom="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="10dp">
                <TextView android:textSize="30sp" android:textColor="@color/black" android:id="@+id/nameTV" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/emailTV" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                <TextView android:textSize="15sp" android:textColor="@color/black" android:id="@+id/phoneTV" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/profilePostsRV" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp" android:layout_below="@+id/profileLinLay"/>
        </RelativeLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton android:id="@+id/floating" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dp" android:src="@drawable/ic_profileedit" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" android:layout_alignParentEnd="true" android:backgroundTint="@color/gray" app:borderWidth="0dp"/>
</RelativeLayout>
